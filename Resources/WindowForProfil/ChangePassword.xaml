<Window x:Class="ScoolLearn.Resources.WindowForProfil.ChangePassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ScoolLearn.Resources.WindowForProfil"
        mc:Ignorable="d"
        Title="Изменение пароля" Height="250" Width="500" WindowStartupLocation="CenterScreen">
    <Grid Background="#1d2238">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Введите новый пароль:" FontSize="30" VerticalAlignment="Bottom" Foreground="#99FFFFFF"/>
        <TextBox x:Name="PasswordTextBox" Grid.Row="1" Margin="10,10,10,10" FontSize="30" VerticalAlignment="Center" Background="#FF171B2D" BorderBrush="#00000000" Foreground="#99FFFFFF"/>
        <Button x:Name="SaveButton" Grid.Row="3" Margin="150,10" Content="Сохранить" FontSize="30" Click="SaveButton_Click" Background="#00DDDDDD" BorderBrush="#00707070" Foreground="#CCFFFFFF"/>
    </Grid>
</Window>
